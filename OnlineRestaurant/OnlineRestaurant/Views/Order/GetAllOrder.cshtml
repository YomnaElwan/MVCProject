@model IEnumerable<OnlineRestaurant.Models.Order>

@{
    ViewData["Title"] = "Order Management";
    Layout = "_AdminDashboard";
}

<div class="container mt-4">
    <h1 class="text-center text-dark">Order Management</h1>

    

    <div class="table-responsive">
        <table class="table table-bordered table-hover shadow-sm text-center">
            <thead class="bg-dark text-white">
                <tr>
                    <th><i class="fas fa-hashtag"></i> Order ID</th>
                    <th><i class="fas fa-calendar-alt"></i> Date</th>
                    <th><i class="fas fa-dollar-sign"></i> Total Amount</th>
                    <th><i class="fas fa-box-open"></i> Order Items</th>
                    <th><i class="fas fa-cogs"></i> Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                            <td class="fw-bold">@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.Date)</td>
                            <td class="text-success fw-bold">$@Html.DisplayFor(modelItem => item.TotalAmount)</td>
                            <td>
                                <ul class="list-unstyled">
                                @foreach (var item1 in item.OrderItems)
                                {
                                            <li><i class="fas fa-check-circle text-success"></i> @item1.product.Name</li>
                                }
                                </ul>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm text-dark">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                                   onclick="return confirm('Are you sure you want to delete this order?');">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Include FontAwesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
