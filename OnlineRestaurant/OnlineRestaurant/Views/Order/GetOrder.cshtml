@model OnlineRestaurant.Models.Order

@{
    ViewData["Title"] = "GetOrder";
    Layout = "_CreateOrderLayout";

}

<h1>GetOrder</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalAmount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalAmount)
        </dd>
        @foreach (OrderItem item in Model.OrderItems)
        {
            <dd class="col-sm-10">
                <strong>Order Item:</strong> <p>@item.product.Name</p>
            </dd>
        }
    </dl>
</div>

