@model OnlineRestaurant.Models.Category

@{
    ViewData["Title"] = "Edit Category";
    Layout = "_AdminDashboard";
}

<h1 class="text-center">Edit Category</h1>

<div class="card shadow p-4">
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="SaveEdit" asp-route-id="@Model.Id">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

                <!-- Category Name -->
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Category Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Category Description -->
                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter category description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-warning w-100">Save Changes</button>
                </div>
            </form>

            <!-- Back to Categories -->
            <div class="text-center mt-3">
                <a asp-action="Getall" class="btn btn-outline-secondary">Back to Categories</a>
            </div>
        </div>
    </div>
</div>

<!-- jQuery Validation Scripts -->
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
