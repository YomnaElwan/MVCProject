@{
    Layout = "_AdminDashboard";
}

<h1 class="text-center mt-4 mb-4 text-black">Category Management</h1>

@model List<Category>

<div class="d-flex justify-content-between mb-4">
    <a asp-action="New" asp-controller="Category" class="btn btn-warning text-dark">
        <i class="fas fa-plus"></i> Add Category
    </a>
</div>

<table class="table table-bordered table-striped table-hover shadow-sm">
    <thead class="bg-secondary text-white">
        <tr class="text-center align-middle">
            <th class="p-3">Category Name</th>
            <th class="p-3">Category Description</th>
            <th class="p-3">View Details</th>
            <th class="p-3">Edit Category</th>
            <th class="p-3">Delete Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr class="text-center align-middle">
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                        <td class="p-3">
                            <a href="/Category/Details/@item.Id" class="btn btn-secondary btn-sm">
                            <i class="fas fa-eye"></i> Show Details
                        </a>
                    </td>
                    <td class="p-3">
                        <a href="/Category/Edit/@item.Id" class="btn btn-warning btn-sm text-dark">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </td>
                    <td class="p-3">
                        <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" 
                           class="btn btn-danger btn-sm" 
                           onclick="return confirm('Are you sure you want to delete this category?');">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-center gap-4 mt-4">
    <a asp-action="GetAll" asp-controller="Product" class="btn btn-success">
        <i class="fas fa-box"></i> Show Products
    </a>
    <a asp-action="GetAll" asp-controller="Ingredient" class="btn btn-danger">
        <i class="fas fa-utensils"></i> Show Ingredients
    </a>
</div>

<!-- Include FontAwesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
