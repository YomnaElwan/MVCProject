@model OnlineRestaurant.Models.Ingredient

@{
    ViewData["Title"] = "Ingredient Details";
    Layout = "_AdminDashboard";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card shadow-lg p-4 rounded-4" style="width: 40rem; background: #f8f9fa;">
        <div class="card-body text-center">
            <h2 class="card-title text-dark mb-4">
                <i class="fas fa-utensils"></i> Ingredient Details
            </h2>
            <hr />

            <div class="text-start">
                <div class="mb-3">
                    <h5><i class="fas fa-tag"></i> @Html.DisplayNameFor(model => model.Name):</h5>
                    <p class="text-muted fs-5">@Html.DisplayFor(model => model.Name)</p>
                </div>

                <div class="mb-3">
                    <h5><i class="fas fa-info-circle"></i> @Html.DisplayNameFor(model => model.Description):</h5>
                    <p class="text-muted fs-5">@Html.DisplayFor(model => model.Description)</p>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-action="GetAll" class="btn btn-warning px-4">
                    <i class="fas fa-arrow-left"></i> Back to Ingredients
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Include FontAwesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
